<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Volunteerpanel" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
<!--         <item name="android:background">@color/black</item> -->
    </style>

    <style name="Theme.Volunteerpanel" parent="Base.Theme.Volunteerpanel" />

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_25sdp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/custom_border</item>
    </style>

    <style name="textView_15" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
    </style>
    <style name="CircleImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="textView_30" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/new_red</item>
    </style>

    <style name="button_20" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
    </style>

    <style name="Theme.Volunteerpanel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Volunteerpanel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Volunteerpanel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>